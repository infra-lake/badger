{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "roots": [
    "<rootDir>/apps/"
  ],
  "moduleNameMapper": {
    "^@badger/common(|/.*)$": "<rootDir>/libs/common/src/$1"
  }
}